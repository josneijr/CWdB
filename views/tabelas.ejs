<!DOCTYPE html>
<html>
    <head>
        <title>CWdB - TABELAS</title>

        <% include partials/head %>

        <script type="text/javascript" src="//cdn.jsdelivr.net/jquery/1/jquery.min.js"></script>
      
        <!-- Include Moment -->
        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.min.js"></script>        
        <script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>    

        <!-- Include Date Range Picker -->
        <script type="text/javascript" src="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.js"></script>  

        <link rel="stylesheet" href="admin-lte/css/slider.css">  

        <link rel="stylesheet" href="tabelas.css">

    </head>

    <body class="hold-transition skin-blue layout-top-nav" onload="UpdateTables()">
        
        <% include partials/header %>
        
        <div class="row bg-navy">
            <div class="col-lg-2 col-lg-offset-1" style="margin-bottom: 15px; padding-top: 15px">
                <strong>Per√≠odo de tempo:</strong>
            </div>
            <div class="col-lg-2" style="margin-bottom: 15px; padding-top: 15px; margin-left: -100px">
                <input type="text" id="daterange" name="daterange" value="01/01/2015 1:30 PM - 01/01/2015 2:00 PM" style="color: black; width: 300px" />
            </div>


            <div class="col-lg-1 col-lg-offset-2" style="margin-bottom: 15px; padding-top: 15px">
                <strong>Intervalo dB:</strong>        
            </div>
            <div class="col-lg-3"  style="margin-bottom: 15px; padding-top: 15px">
                <input id="slider_dB" type="text" data-slider-min="0" data-slider-max="200" data-slider-step="1" data-slider-value="70"/>                
            </div>        
            <div class="col-lg-1"  style="margin-bottom: 15px; padding-top: 15px">
                <label id="sliderValue">60 dB</label>
            </div>        
        </div>
        
        <div class="row">
        
            <div class="info-box-div col-md-4 col-sm-6 col-xs-12">
                <div class="info-box bg-gray">
        
                    <span class="info-box-icon">
                        <i class="ion ion-ios-information-outline"></i>
                    </span>
        
                    <div class="info-box-content">
                        <span class="info-box-text">Pontos Coletados</span>
                        <span class="info-box-number text-center" id="totalSamples" style="margin-top: 12px">50.000</span>
                    </div>
        
                </div>
            </div>
        
            <div class="info-box-div col-md-4 col-sm-6 col-xs-12">
                <div class="info-box bg-green">
        
                    <span class="info-box-icon">
                        <i class="ion ion-android-checkmark-circle"></i>
                    </span>
        
                    <div class="info-box-content">
                        <span id="lowerThanDB" class="info-box-text" style="margin-bottom: 10px">Pontos abaixo de 60dB</span>
                        <span class="info-box-number">5.000</span>
        
                        <div class="progress">
                            <div class="progress-bar" style="width: 10%"></div>
                        </div>
        
                    </div>
        
                </div>
            </div>
        
            <div class="info-box-div col-md-4 col-sm-6 col-xs-12">
                <div class="info-box bg-red">
                    <span class="info-box-icon">
                        <i class="ion ion-android-cancel"></i>
                    </span>
        
                    <div class="info-box-content">
        
                        <span id="greaterThanDB" class="info-box-text" style="margin-bottom: 10px">Pontos acima de 60dB</span>
                        <span class="info-box-number">45.000</span>
        
                        <div class="progress">
                            <div class="progress-bar" style="width: 90%"></div>
                        </div>
        
                    </div>
        
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-xs-12 col-lg-6">
                <div id="curve_chart" style="width: 900px; height: 500px"></div>
            </div>
        
        </div>

        <!-- https://bootsnipp.com/snippets/featured/animated-loading -->
        <div class="container">
                <div class="row">
                    <div id="loading">
                        <ul class="bokeh">
                            <li></li>
                            <li></li>
                            <li></li>
                        </ul>
                    </div>
                </div>
            </div>          
        
        <script src="admin-lte/js/bootstrap-slider.js"></script>        
        
        <script>
            var startDate = new Date();

            startDate.setHours(startDate.getHours() - 24);

            $('#daterange').daterangepicker({
                timePicker: true,
                timePicker24Hour: true,
                timePickerIncrement: 1,
                startDate: startDate,
                endDate: new Date(),
                locale: {
                    format: 'DD/MM/YYYY HH:mm'
                }
            });
            
            $('#slider_dB').slider({
                formatter: function(value) {
                }
            });            
        </script>        

        <!-- START: UPDATE MAP SAMPLES -->
        <script type="text/javascript" src="getServerSamples.js"></script>

        <script type="text/javascript" src="tabelas_update.js"></script>

        <script type="text/javascript" src="tabelas_callbacks.js"></script> 

    </body>

</html>